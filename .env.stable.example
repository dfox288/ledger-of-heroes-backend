# =============================================================================
# Stable Environment Configuration
# =============================================================================
# Copy this to .env.stable and generate a new APP_KEY:
#   cp .env.stable.example .env.stable
#   docker compose -f docker-compose.stable.yml run --rm php php artisan key:generate
# =============================================================================

APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8081

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Stable environment uses separate database
DB_CONNECTION=mysql
DB_HOST=mysql_stable
DB_PORT=3306
DB_DATABASE=dnd_compendium_stable
DB_USERNAME=dnd_user
DB_PASSWORD=dnd_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Stable environment uses separate Redis
CACHE_STORE=redis
CACHE_PREFIX=stable_

# Stable environment uses separate Meilisearch
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch_stable:7700
MEILISEARCH_KEY=masterKey
SCOUT_PREFIX=stable_

MEMCACHED_HOST=127.0.0.1

# Stable environment uses separate Redis instance
REDIS_CLIENT=phpredis
REDIS_HOST=redis_stable
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# XML Import Configuration (same as dev)
XML_SOURCE_PATH=/var/www/fightclub_forked/Sources/PHB2014/WizardsOfTheCoast
