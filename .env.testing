# =============================================================================
# DATABASE CONFIGURATION FOR TESTS
# =============================================================================
# Default: SQLite in-memory (set in phpunit.xml)
# - Fast, no Docker required
# - Works for: Unit-DB, Feature-DB suites
#
# To override with MySQL (for Feature-Search or full compatibility testing):
#   DB_CONNECTION=mysql DB_HOST=mysql DB_DATABASE=dnd_compendium_test \
#   docker compose exec php php artisan test --testsuite=Feature-Search
#
# Or uncomment these lines and run inside Docker:
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=dnd_compendium_test
# DB_USERNAME=dnd_user
# DB_PASSWORD=dnd_password
# =============================================================================

SESSION_DRIVER=array
SESSION_LIFETIME=120

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=array
CACHE_PREFIX=

# =============================================================================
# MEILISEARCH CONFIGURATION (Required for Feature-Search suite)
# =============================================================================
# Feature-Search tests require Meilisearch running in Docker.
# Unit-DB and Feature-DB suites do NOT require Meilisearch.
SCOUT_DRIVER=meilisearch
SCOUT_PREFIX=test_
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=array
